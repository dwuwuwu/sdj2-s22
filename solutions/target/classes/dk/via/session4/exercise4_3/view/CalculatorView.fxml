<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="164.0" prefWidth="260.0" userData="Converter"
      xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17"
      fx:controller="dk.via.session4.exercise4_3.view.CalculateViewController">
    <HBox spacing="10.0">
        <Label>First operand</Label>
        <TextField fx:id="firstOperand"/>
        <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </VBox.margin>
    </HBox>
    <HBox spacing="10.0">
        <Label>Second operand</Label>
        <TextField fx:id="secondOperand" />
        <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </VBox.margin>
    </HBox>
    <HBox spacing="10.">
        <Button onAction="#add" text="+" />
        <Button onAction="#subtract" text="-" />
        <Button onAction="#multiply" text="*" />
        <Button onAction="#divide" text="/" />
    </HBox>
    <Label fx:id="result">
        <VBox.margin>
            <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
        </VBox.margin>
    </Label>
    <Label fx:id="error" textFill="RED">
        <VBox.margin>
            <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
        </VBox.margin>
    </Label>
</VBox>
