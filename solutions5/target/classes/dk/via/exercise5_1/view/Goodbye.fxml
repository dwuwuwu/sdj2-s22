<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="dk.via.exercise5_1.view.GoodbyeViewController"
      prefHeight="400.0"
      prefWidth="260.0"
      userData="Message">
    <Label>
        Goodbye.
        <font>
            <Font size="18.0"/>
        </font>
        <VBox.margin>
            <Insets bottom="10.0" left="20.0" right="10.0" top="10.0"/>
        </VBox.margin>
    </Label>
    <Label fx:id="userCount">
        <VBox.margin>
            <Insets bottom="10.0" left="20.0" right="10.0" top="10.0"/>
        </VBox.margin>
    </Label>
    <Label fx:id="lastUserInfo">
        <VBox.margin>
            <Insets bottom="10.0" left="20.0" right="10.0" top="10.0"/>
        </VBox.margin>
    </Label>
    <HBox spacing="10.0">
        <Button text="OK" onAction="#okButtonPressed"/>
        <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </VBox.margin>
    </HBox>
</VBox>
